<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewHotDealTrangThai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:scaleType="fitXY"
        android:src="@drawable/hotdeal1"
        app:layout_constraintTop_toBottomOf="@+id/textViewLogoTrangThaiDonHang"/>

    <Button
        android:id="@+id/tuttonBackCheckInfor"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewLogoTrangThaiDonHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_red"
        android:gravity="center"
        android:text="Trạng thái đơn hàng"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView

        android:id="@+id/imageViewcolummtop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_black"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHotDealTrangThai"/>

    <TextView
        android:id="@+id/textViewTranBinhTrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="Nam hải Quán - Cơm gà,Đồ nướng - Trần Bình Trọng "
        android:textColor="@color/color_black"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewcolummtop"/>

    <TextView
        android:id="@+id/textViewTong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng "
        android:textColor="@color/color_black"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTranBinhTrong"/>

    <TextView
        android:id="@+id/textViewGiaTienMat"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="77000K"
        android:textColor="@color/color_blue1"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewTong"
        app:layout_constraintTop_toTopOf="@+id/textViewTong"/>

    <TextView
        android:id="@+id/textViewKK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="K"
        android:textColor="@color/color_blue1"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewGiaTienMat"
        app:layout_constraintTop_toTopOf="@+id/textViewGiaTienMat"/>

    <TextView
        android:id="@+id/textViewPhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text="( 6 Phần ) - Tiền mặt"
        android:textColor="@color/color_black"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewKK"
        app:layout_constraintTop_toTopOf="@+id/textViewGiaTienMat"/>

    <TextView
        android:id="@+id/textViewChiTiet"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/border_radius"
        android:gravity="center"
        android:text="Chi tiết"
        android:textColor="@color/color_blue1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewTranBinhTrong"/>

    <ImageView
        android:id="@+id/imagecomlumBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_black"
        app:layout_constraintTop_toBottomOf="@+id/textViewGiaTienMat"/>

    <TextView
        android:id="@+id/textViewDateStart"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:text="26/03"
        android:textColor="@color/color_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagecomlumBottom"/>

    <ImageView
        android:id="@+id/imageViewPoint"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_40"
        android:src="@drawable/logo1"
        app:layout_constraintLeft_toRightOf="@+id/textViewDateStart"
        app:layout_constraintTop_toTopOf="@+id/textViewDateStart"/>

    <TextView
        android:id="@+id/textViewOrderSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:text="Đặt hàng thành công"
        android:textColor="@color/color_black"
        app:layout_constraintLeft_toRightOf="@+id/imageViewPoint"
        app:layout_constraintTop_toTopOf="@+id/imageViewPoint"
        />

    <ImageView
        android:id="@+id/imageViewPoint1"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_40"
        android:src="@drawable/logo1"
        app:layout_constraintLeft_toRightOf="@+id/textViewDateStart"
        app:layout_constraintTop_toTopOf="@+id/textViewChuanBiMon"/>

    <TextView
        android:id="@+id/textViewChuanBiMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="Đang chuẩn bị món "
        android:textColor="@color/color_black"
        app:layout_constraintLeft_toLeftOf="@+id/textViewOrderSuccess"
        app:layout_constraintTop_toBottomOf="@+id/textViewOrderSuccess"
        />

    <ImageView
        android:id="@+id/imageViewPoint2"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_40"
        android:src="@drawable/logo1"
        app:layout_constraintLeft_toRightOf="@+id/textViewDateStart"
        app:layout_constraintTop_toTopOf="@+id/textViewDangGiaoToi"/>

    <TextView
        android:id="@+id/textViewDangGiaoToi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="Đang giao tới"
        android:textColor="@color/color_black"
        app:layout_constraintLeft_toLeftOf="@+id/textViewOrderSuccess"
        app:layout_constraintTop_toBottomOf="@+id/textViewChuanBiMon"
        />

    <ImageView
        android:id="@+id/imageViewPoint3"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_40"
        android:src="@drawable/logo1"
        app:layout_constraintLeft_toRightOf="@+id/textViewDateStart"
        app:layout_constraintTop_toTopOf="@+id/textViewGiaoHangThanhCong"/>

    <TextView
        android:id="@+id/textViewGiaoHangThanhCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="Giao hàng thành công"
        android:textColor="@color/color_black"
        app:layout_constraintLeft_toLeftOf="@+id/textViewOrderSuccess"
        app:layout_constraintTop_toBottomOf="@+id/textViewDangGiaoToi"
        />

    <ImageView
        android:id="@+id/tuttonCall"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_blue"
        android:src="@drawable/call"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewPoint1"/>

    <ImageView
        android:id="@+id/tuttonContact"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_5"
        android:background="@color/color_blue"
        android:src="@drawable/contact"
        app:layout_constraintLeft_toRightOf="@+id/tuttonCall"
        app:layout_constraintTop_toTopOf="@id/tuttonCall"
        />

</android.support.constraint.ConstraintLayout>