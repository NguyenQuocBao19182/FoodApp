<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@color/color_white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:background="@color/color_black"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewStatusOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:text="Đang giao hàng"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewMaDonHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text="Mã đơn hàng : "
        android:textColor="@color/color_black"
        android:textSize="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewNumberBill"/>

    <TextView
        android:id="@+id/textViewNumberBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text=" 2323232"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/textViewMaDonHang"
        app:layout_constraintTop_toBottomOf="@+id/textViewStatusOrder"/>

    <TextView
        android:id="@+id/textViewNgayTao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text="Thời gian tạo đơn hàng : "
        android:textColor="@color/color_black"
        android:textSize="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewDateBill"/>

    <TextView
        android:id="@+id/textViewDateBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:text="2323232"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/textViewNgayTao"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumberBill"/>

    <TextView
        android:id="@+id/textViewThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:text="Thanh Toán : "
        android:textColor="@color/color_black"
        android:textSize="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewTotal"/>

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="50.000"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/textViewThanhToan"
        app:layout_constraintTop_toBottomOf="@+id/textViewDateBill"/>

    <TextView
        android:id="@+id/textViewK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="K"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/textViewTotal"
        app:layout_constraintTop_toTopOf="@+id/textViewTotal"/>

    <ImageView
        android:id="@+id/imageViewStatusBill"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:src="@drawable/shiping"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewNumberBill"/>
</android.support.constraint.ConstraintLayout>
